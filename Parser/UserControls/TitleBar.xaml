<UserControl x:Class="RetailCorrector.Parser.UserControls.TitleBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="35" Width="644" Background="#aaaaaa"
             DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <UserControl.Resources>
        <Style TargetType="Button">
            <Setter Property="Width" Value="35"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="#aaaaaa"/>
            <Setter Property="Foreground" Value="#cccccc"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{Binding Foreground, RelativeSource={RelativeSource Self}}"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="False">
                    <Setter Property="Background" Value="#aaaaaa"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="Line">
            <Setter Property="StrokeThickness" Value="1"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Parent.Parent.IsEnabled}" Value="true">
                    <Setter Property="Stroke" Value="White"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Parent.Parent.IsEnabled}" Value="false">
                    <Setter Property="Stroke" Value="#CCCCCC"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="Ellipse">
            <Style.Triggers>
                <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Parent.Parent.IsEnabled}" Value="true">
                    <Setter Property="Fill" Value="White"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Parent.Parent.IsEnabled}" Value="false">
                    <Setter Property="Fill" Value="#CCCCCC"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <Canvas Width="644" >
        <Button Canvas.Left="609" Click="CloseApp" Foreground="Red">
            <Button.Content>
                <Canvas Margin="-1,-1">
                    <Line X1="7.5" Y1="7.5" X2="-7.5" Y2="-7.5" Stroke="White" StrokeThickness="1"/>
                    <Line X1="-7.5" Y1="7.5" X2="7.5" Y2="-7.5" Stroke="White" StrokeThickness="1"/>
                </Canvas>
            </Button.Content>
        </Button>
        <Button Canvas.Left="574" Click="MinApp">
            <Button.Content>
                <Canvas  Margin="-1,-1">
                    <Line X1="-7" Y1="6" X2="7" Y2="6" Stroke="White" StrokeThickness="1"/>
                </Canvas>
            </Button.Content>
        </Button>
        <Label Height="35" Width="489" Canvas.Left="85" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
            <TextBlock Text="{Binding PageTitle, StringFormat='RetailCorrector: \{0\}'}" 
                       FontWeight="Medium" />
        </Label>
        <Button Width="15" Click="OpenMenu" IsEnabled="{Binding IsMenuEnabled}">
            <Button.Content>
                <Canvas Width="3" Height="15" Margin="-1,-1">
                    <Ellipse Width="3" Height="3"/>
                    <Ellipse Width="3" Height="3" Canvas.Top="6"/>
                    <Ellipse Width="3" Height="3" Canvas.Bottom="0"/>
                </Canvas>
            </Button.Content>
        </Button>
        <Button Canvas.Left="15" Click="ToPrepPage" IsEnabled="{Binding IsNotFirst}">
            <Button.Content>
                <Canvas Width="20" Height="15" Margin="-1,-1">
                    <Line X1="7" Y1="0" X2="-1" Y2="7.85"/>
                    <Line X1="7" Y1="15" X2="-1" Y2="7.15"/>
                    <Line X1="0" Y1="7.5" X2="20" Y2="7.5" />
                </Canvas>
            </Button.Content>
        </Button>
        <Button Canvas.Left="50" Click="ToNextPage" IsEnabled="{Binding IsNotLast}">
            <Button.Content>
                <Canvas Width="20" Height="15" Margin="-1,-1">
                    <Line X1="13" Y1="0" X2="21" Y2="7.85"/>
                    <Line X1="13" Y1="15" X2="21" Y2="7.15"/>
                    <Line X1="0" Y1="7.5" X2="20" Y2="7.5"/>
                </Canvas>
            </Button.Content>
        </Button>
    </Canvas>
</UserControl>
